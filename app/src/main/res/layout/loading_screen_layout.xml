<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/item_view_border"
    android:backgroundTint="#ff000000"
    android:backgroundTintMode="add"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:layout_gravity="center_horizontal"
        android:textSize="30dp" />

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/loading_progress_bar_width"
        android:layout_height="@dimen/loading_progress_bar_height"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/okSkipLoadButton"
        style="@style/framed_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
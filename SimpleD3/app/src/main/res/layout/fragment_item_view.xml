<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.game.simpled3.gUI.ItemViewPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="slot"
        android:id="@+id/slotTextView"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/colorTextView"
        android:layout_toEndOf="@+id/colorTextView"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="color"
        android:id="@+id/colorTextView"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ilvl"
        android:id="@+id/itemILvlTextView"
        android:layout_row="0"
        android:layout_column="4"
        android:layout_alignStart="@+id/itemDefTextView"
        android:layout_below="@+id/itemDefTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ItemName"
        android:id="@+id/itemNameTextView"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_below="@+id/slotTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DPS"
        android:id="@+id/itemDpsTextView"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_below="@+id/itemNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DEF"
        android:id="@+id/itemDefTextView"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_alignEnd="@+id/itemDpsTextView"
        android:layout_below="@+id/itemDpsTextView" />

</RelativeLayout>
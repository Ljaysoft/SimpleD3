<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Items:"
        android:id="@+id/itemTextView"
        android:layout_above="@+id/itemButtonsLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kill"
        android:id="@+id/killButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="doKillMonsters" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Dungeon"
        android:id="@+id/startDungeonButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dungeon Lvl:"
        android:id="@+id/dungeonLvlTextView"
        android:layout_above="@+id/progressTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Progress:"
        android:id="@+id/progressTextView"
        android:layout_above="@+id/startDungeonButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerStatLvl"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="5"
        android:columnCount="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lvl:"
            android:id="@+id/lvlTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/lvlValueTtextView"
            android:layout_alignBottom="@+id/lvlTextView"
            android:layout_toRightOf="@+id/lvlTextView"
            android:layout_toEndOf="@+id/lvlTextView"
            android:layout_column="1"
            android:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="XP to lvl:"
            android:id="@+id/xpTextView"
            android:layout_below="@+id/lvlTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/xpToLvlValueTextView"
            android:layout_alignBottom="@+id/xpTextView"
            android:layout_toRightOf="@+id/xpTextView"
            android:layout_toEndOf="@+id/xpTextView"
            android:layout_column="1"
            android:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DPS:"
            android:id="@+id/dpsTextView"
            android:layout_below="@+id/xpTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/dpsValueTextView"
            android:layout_above="@+id/goldTextView"
            android:layout_toRightOf="@+id/goldTextView"
            android:layout_toEndOf="@+id/goldTextView"
            android:layout_column="1"
            android:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DEF:"
            android:id="@+id/defTextView"
            android:layout_alignTop="@+id/dpsTextView"
            android:layout_centerHorizontal="true"
            android:layout_column="2"
            android:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            android:id="@+id/defValueTextView"
            android:layout_alignTop="@+id/dpsValueTextView"
            android:layout_toRightOf="@+id/defTextView"
            android:layout_toEndOf="@+id/defTextView"
            android:layout_column="3"
            android:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Gold:"
            android:id="@+id/goldTextView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/goldValueTextView"
            android:layout_alignBottom="@+id/goldTextView"
            android:layout_toRightOf="@+id/goldTextView"
            android:layout_toEndOf="@+id/goldTextView"
            android:layout_column="1"
            android:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Shards:"
            android:id="@+id/shardTextView"
            android:layout_below="@+id/goldTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_row="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/shardValueTextView"
            android:layout_below="@+id/playerStatLvl"
            android:layout_toRightOf="@+id/itemButton8"
            android:layout_toEndOf="@+id/itemButton8"
            android:layout_column="1"
            android:layout_row="4" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemButtonsLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="3"
        android:columnCount="4">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton1"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_alignBottom="@+id/itemButton7"
            android:layout_toRightOf="@+id/goldTextView"
            android:layout_toEndOf="@+id/goldTextView"
            android:layout_column="0"
            android:layout_row="0" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton2"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_alignTop="@+id/itemButton7"
            android:layout_toRightOf="@+id/itemButton7"
            android:layout_toEndOf="@+id/itemButton7"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton3"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_below="@+id/itemButton2"
            android:layout_alignLeft="@+id/itemButton2"
            android:layout_alignStart="@+id/itemButton2"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton4"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_alignBottom="@+id/itemButton3"
            android:layout_toRightOf="@+id/itemButton3"
            android:layout_toEndOf="@+id/itemButton3"
            android:layout_column="3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton5"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_below="@+id/itemButton8"
            android:layout_toRightOf="@+id/itemButton3"
            android:layout_toEndOf="@+id/itemButton3"
            android:layout_column="0"
            android:layout_row="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton6"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_alignTop="@+id/itemButton2"
            android:layout_toRightOf="@+id/itemButton2"
            android:layout_toEndOf="@+id/itemButton2"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton7"
            android:layout_below="@+id/itemTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton8"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_alignBottom="@+id/itemButton12"
            android:layout_alignLeft="@+id/itemButton7"
            android:layout_alignStart="@+id/itemButton7"
            android:layout_column="3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton9"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_below="@+id/itemButton7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_row="2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton10"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_alignBottom="@+id/itemButton12"
            android:layout_alignLeft="@+id/itemButton8"
            android:layout_alignStart="@+id/itemButton8"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton11"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_alignBottom="@+id/itemButton10"
            android:layout_toRightOf="@+id/itemButton10"
            android:layout_toEndOf="@+id/itemButton10"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton12"
            android:maxWidth="@dimen/item_button_height"
            android:minHeight="@dimen/item_button_height"
            android:maxHeight="@dimen/item_button_height"
            android:minWidth="@dimen/item_button_height"
            android:layout_below="@+id/itemButton12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="3" />

    </GridLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_alignBottom="@+id/progressTextView"
        android:layout_alignRight="@+id/killButton"
        android:layout_alignEnd="@+id/killButton"
        android:layout_toEndOf="@+id/progressTextView"
        android:layout_toRightOf="@+id/progressTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/dungeonLvlValueTextView"
        android:layout_alignBottom="@+id/dungeonLvlTextView"
        android:layout_toRightOf="@+id/dungeonLvlTextView"
        android:layout_toEndOf="@+id/dungeonLvlTextView" />


</RelativeLayout>
